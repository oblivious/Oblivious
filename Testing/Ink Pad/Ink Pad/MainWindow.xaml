<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ink Pad" Height="500" Width="370"
        Background="DarkSlateGray">
    <Grid>
        <InkCanvas Background="LightYellow"  Height="Auto" HorizontalAlignment="Stretch" Margin="9,9,9,48
                   " Name="inkCanvas1" VerticalAlignment="Stretch" Width="Auto" />
        <Button Content="Clear" Height="23" HorizontalAlignment="Left" Margin="85,0,0,16" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" />
        <Button Content="Close" Height="23" HorizontalAlignment="Right" Margin="0,0,85,16" Name="button2" VerticalAlignment="Bottom" Width="75" Click="ButtonCloseClicked"/>
    </Grid>
</Window>
